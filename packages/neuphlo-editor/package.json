{
  "name": "neuphlo-editor",
  "version": "1.6.4",
  "private": false,
  "description": "A lightweight React wrapper around Tiptap with sensible defaults and image upload support.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./react/core": {
      "types": "./dist/react/core.d.ts",
      "import": "./dist/react/core.js",
      "require": "./dist/react/core.cjs"
    },
    "./headless": {
      "types": "./dist/headless/index.d.ts",
      "import": "./dist/headless/index.js",
      "require": "./dist/headless/index.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./highlight.css": "./dist/highlight.css",
    "./react.css": "./dist/react/index.css"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/react/index.ts src/react/core.ts src/headless/index.ts --format esm,cjs --dts --sourcemap && pnpm run copy:css",
    "dev": "tsup src/index.ts src/react/index.ts src/react/core.ts src/headless/index.ts --format esm,cjs --dts --sourcemap --watch",
    "copy:css": "mkdir -p dist && cp src/styles.css dist/styles.css && cp src/highlight.css dist/highlight.css",
    "prepack": "pnpm run build",
    "prepare": "pnpm run build",
    "typecheck": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "peerDependencies": {
    "@tiptap/pm": "3.15.3",
    "@tiptap/react": "3.15.3",
    "@tiptap/suggestion": "3.15.3",
    "@tiptap/extension-collaboration": "3.15.3",
    "@tiptap/extension-collaboration-cursor": "2.26.2",
    "@types/react": "^18.2.0 || ^19.0.0",
    "@types/react-dom": "^18.2.0 || ^19.0.0",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "yjs": "^13.6.0"
  },
  "peerDependenciesMeta": {},
  "devDependencies": {
    "@tiptap/suggestion": "3.15.3",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.5",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@tabler/icons-react": "^3.34.1",
    "@tiptap/core": "3.15.3",
    "@tiptap/extension-code-block-lowlight": "3.15.3",
    "@tiptap/extension-image": "3.15.3",
    "@tiptap/extension-link": "3.15.3",
    "@tiptap/extension-mention": "3.15.3",
    "@tiptap/extension-placeholder": "3.15.3",
    "@tiptap/starter-kit": "3.15.3",
    "@tiptap/extension-collaboration": "3.15.3",
    "@tiptap/extension-collaboration-cursor": "2.26.2",
    "cmdk": "^1.1.1",
    "highlight.js": "^11.11.1",
    "jotai": "^2.11.0",
    "lowlight": "^3.3.0",
    "tunnel-rat": "^0.1.2",
    "yjs": "^13.6.0"
  }
}

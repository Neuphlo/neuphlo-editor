{
  "name": "neuphlo-editor",
  "version": "0.3.1",
  "private": false,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./styles.css": {
      "default": "./dist/styles.css"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "dist/styles.css"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/react/index.ts --dts --format esm,cjs --clean && npm run build:css",
    "build:css": "cp src/styles.css dist/styles.css",
    "dev": "tsup --watch",
    "publish:dry": "npm publish --dry-run",
    "prepack": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Neuphlo/neuphlo-editor.git",
    "directory": "packages/neuphlo-editor"
  },
  "bugs": {
    "url": "https://github.com/Neuphlo/neuphlo-editor/issues"
  },
  "homepage": "https://github.com/Neuphlo/neuphlo-editor#readme",
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@tiptap/core": "^2.4.0",
    "@tiptap/pm": "^2.4.0",
    "@tiptap/react": "^2.4.0",
    "@tiptap/starter-kit": "^2.4.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.1.0",
    "typescript": "^5.6.2"
  }
}

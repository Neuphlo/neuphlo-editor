{
  "name": "neuphlo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run --workspaces build",
    "dev": "concurrently -c auto -n pkg,app \"npm:dev -w neuphlo-editor\" \"npm:dev -w playground\"",
    "publish:dry": "npm -w neuphlo-editor run publish:dry",
    "publish:package": "npm publish -w neuphlo-editor"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tabler/icons-react": "^3.34.1",
    "@tailwindcss/vite": "^4.1.12",
    "@tiptap/extension-code-block-lowlight": "^3.3.0",
    "@tiptap/extension-floating-menu": "^3.3.0",
    "@tiptap/extension-horizontal-rule": "^3.3.0",
    "@tiptap/extension-image": "^3.3.0",
    "lowlight": "^3.3.0",
    "react-colorful": "^5.6.1",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.12",
    "uuid": "^11.1.0"
  },
  "overrides": {
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0",
    "esbuild": "0.25.9",
    "vite": {
      "esbuild": "0.25.9"
    }
  }
}
